{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "types": [
      "node",
      "jest",
    ],
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ],
}
